{
  "name": "mansion-espiritus",
  "description": "Evita que el infierno se desate en la tierra. Un escape room para Google Assis basado en el juego de cartas de Mallory Mansion.",
  "scripts": {
    "lint": "eslint .",
    "start": "npm run shell",
    "test": "jest test/**/*.spec.js",
    "tdd": "jest --watch test/**/*.spec.js",
    "walkthrough": "node app/walkthrough/walkthrough.js"
  },
  "watch": {
    "walkthrough": {
      "patterns": [
        ".",
        "walkthrough",
        "intents",
        "lib",
        "scure"
      ],
      "extensions": "js",
      "quiet": true,
      "legacyWatch": true,
      "delay": 1000,
      "inherit": true
    },
    "test": {
      "patterns": [
        ".",
        "app",
        "data",
        "intents",
        "lib",
        "scure"
      ],
      "extensions": "js",
      "quiet": true,
      "legacyWatch": true,
      "delay": 1000,
      "inherit": true
    }
  },
  "dependencies": {
    "https-proxy-agent": "^3.0.0",
    "pluralize": "^7.0.0",
    "scure": "1.6.0"
  },
  "devDependencies": {
    "@babel/core": "^7.23.0",
    "@babel/preset-env": "^7.22.20",
    "babel-jest": "^29.7.0",
    "eslint": "^5.12.0",
    "eslint-plugin-promise": "^4.0.1",
    "jest": "^29.7.0"
  },
  "babel": {
    "presets": [
      [
        "@babel/preset-env",
        {
          "targets": {
            "node": "current"
          }
        }
      ]
    ]
  },
  "private": true,
  "type": "module"
}
