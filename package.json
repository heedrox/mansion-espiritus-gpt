{
  "name": "mansion-espiritus",
  "description": "Evita que el infierno se desate en la tierra. Un escape room para Google Assis basado en el juego de cartas de Mallory Mansion.",
  "scripts": {
    "lint": "eslint .",
    "start": "npm run shell",
    "test": "jest test/**/*.spec.js",
    "tdd": "npm-watch test",
    "walkthrough": "node app/walkthrough/walkthrough.js",
    "walkthrough:watch": "npm-watch walkthrough"
  },
  "watch": {
    "walkthrough": {
      "patterns": [
        ".",
        "walkthrough",
        "intents",
        "lib",
        "scure"
      ],
      "extensions": "js",
      "quiet": true,
      "legacyWatch": true,
      "delay": 1000,
      "inherit": true
    },
    "test": {
      "patterns": [
        ".",
        "app",
        "data",
        "intents",
        "lib",
        "scure"
      ],
      "extensions": "js",
      "quiet": true,
      "legacyWatch": true,
      "delay": 1000,
      "inherit": true
    }
  },
  "dependencies": {
    "https-proxy-agent": "^3.0.0",
    "node-fetch": "^3.3.2",
    "pluralize": "^7.0.0",
    "scure": "1.6.0"
  },
  "devDependencies": {
    "@babel/plugin-transform-modules-commonjs": "^7.23.0",
    "eslint": "^5.12.0",
    "eslint-plugin-promise": "^4.0.1",
    "jest": "^29.7.0",
    "npm-watch": "^0.6.0"
  },
  "babel": {
    "env": {
      "test": {
        "plugins": ["@babel/plugin-transform-modules-commonjs"]
      }
    }
  },
  "private": true,
  "type": "module"
}
